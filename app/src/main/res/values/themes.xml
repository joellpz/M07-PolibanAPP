<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Poliban" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_poliban</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_poliban</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/jaldi_bold</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Poliban.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Poliban.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Theme.Poliban.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="Font.JaldiBold" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:fontFamily">@font/jaldi_bold</item>
    </style>



    <style name="lettersDataBank">
        <item name="android:textSize">
            15sp
        </item>
        <item name="android:textColor">
            #A1FFFFFF
        </item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/orange_light</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#6C6B6B</item>
        <item name="android:weekNumberColor">@color/blue_poliban</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/orange_poliban</item>
    </style>

    <style name="Font.Montserrat" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:fontFamily">@font/montserrat_font</item>
    </style>

</resources>