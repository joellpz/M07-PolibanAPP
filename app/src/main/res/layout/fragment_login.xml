<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andorid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_poliban">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/signInForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:justifyContent="center"
        app:flexWrap="wrap"
        app:alignContent="center"
        >

        <ImageView
            android:id="@+id/logoC_splash"
            android:layout_width="252dp"
            android:layout_height="150dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo_wb"
            android:padingBottom="60dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login with email/password"
            android:textColor="@color/white_transparent"
            android:paddingStart="60dp"
            android:paddingTop="20dp"
            />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="@color/blue_light"
            android:hint="Email"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:textColorHint="@color/white_transparent"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_radius"
            android:backgroundTint="@color/blue_light"
            android:hint="Password"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:textColorHint="@color/white_transparent"
            android:textColor="@color/white"/>


            <Button
                android:id="@+id/loginButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/orange_light"
                android:text="Login" />


            <Button
                android:id="@+id/toRegisterFragment"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                android:backgroundTint="@color/blue_light"
                android:text="Register" />
    </com.google.android.flexbox.FlexboxLayout>

    <ProgressBar
        android:id="@+id/signInProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>